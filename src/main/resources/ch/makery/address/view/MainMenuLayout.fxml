<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1600.0" xmlns="http://javafx.com/javafx/21.0.4" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.makery.address.view.MainMenuController">
    <children>
        <VBox alignment="TOP_CENTER" prefWidth="100.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Label alignment="CENTER" text="CHEMIXTRY: PROFESSIONAL" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets top="140.0" />
                    </VBox.margin>
                </Label>
                <Label alignment="CENTER" text="Welcome to the professional mode of the chemistry mixing phenomenon, CHEMIXTRY! Time yourself, view your stats and more!" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets top="100.0" />
                    </VBox.margin>
                </Label>
                <Label alignment="CENTER" text="Choose an option below to continue" textAlignment="CENTER">
                    <VBox.margin>
                        <Insets top="24.0" />
                    </VBox.margin>
                </Label>
                <Button fx:id="playGameButton" mnemonicParsing="false" onAction="#handlePlayGameButtonPressed" prefWidth="280.0" text="PLAY NEW GAME / LOAD GAME">
                    <VBox.margin>
                        <Insets top="160.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="viewSavesButton" mnemonicParsing="false" onAction="#handleViewSavesButtonPressed" prefWidth="280.0" text="VIEW PREVIOUS LEVELS">
                    <VBox.margin>
                        <Insets top="40.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="viewStatsButton" mnemonicParsing="false" onAction="#handleViewStatsButtonPressed" prefWidth="280.0" text="VIEW GAME STATS">
                    <VBox.margin>
                        <Insets top="40.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="quitButton" layoutX="577.0" layoutY="487.0" mnemonicParsing="false" onAction="#handleQuitButtonPressed" prefWidth="280.0" text="QUIT">
                    <VBox.margin>
                        <Insets top="40.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>
    </children>
</AnchorPane>
